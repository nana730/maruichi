<div class="mb-6 text-center">
  <h2 class="display-4 text-brown-700 fw-bold">記事一覧</h2>
</div>

<!-- 記事追加ボタンを中央に配置 -->
<div class="d-flex justify-content-center mb-4">
  <%= link_to new_admin_article_path, class: "btn btn-coffee mb-4 py-2 rounded-pill shadow-lg" do %>
    <i class="bi bi-plus-circle"></i> 記事追加
  <% end %>
</div>

<div class="relative flex flex-col min-w-0 mb-6 break-words bg-light-brown border-0 border-transparent border-solid shadow-lg rounded-2xl bg-clip-border">
  <div class="flex-auto px-0 pt-0 pb-2">
    <div class="p-0 overflow-x-auto">
      <table class="table table-striped table-bordered table-hover text-slate-500">
        <thead class="bg-brown-700 text-white">
          <tr class="text-center">
            <th class="font-bold text-left">画像</th>
            <th class="font-bold text-left">タイトル</th>
            <th class="font-bold text-center">作成日</th>
            <th class="font-bold text-center">更新日</th>
            <th class="font-semibold text-center"></th> <!-- 詳細ボタンの列 -->
            <th class="font-semibold text-center"></th> <!-- 削除ボタンの列 -->
          </tr>
        </thead>
        <tbody class="bg-white text-slate-700">
          <% @articles.each do |article| %>
            <tr class="text-center">
              <!-- 画像 -->
              <td class="align-middle">
                <%= link_to admin_article_path(article) do %>
                  <div class="d-flex align-items-center justify-content-start">
                    <div class="w-16 me-4">
                      <%= image_tag article.image, class: "img-thumbnail", size: "100x100" if article.image.attached? %>
                    </div>
                  </div>
                <% end %>
              </td>

              <!-- タイトル -->
              <td class="align-middle">
                <%= link_to admin_article_path(article) do %>
                  <h6 class="text-lg font-bold text-brown-700"><%= article.title %></h6>
                <% end %>
              </td>

              <!-- 作成日 -->
              <td class="align-middle">
                <span class="font-semibold text-sm text-slate-400"><%= l article.created_at, format: :short %></span>
              </td>

              <!-- 更新日 -->
              <td class="align-middle">
                <span class="font-semibold text-sm text-slate-400"><%= l article.updated_at, format: :short %></span>
              </td>

              <!-- 詳細ボタン -->
              <td class="align-middle">
                <%= link_to admin_article_path(article), class: "btn btn-outline-brown py-1 rounded-pill shadow-sm text-brown-700" do %>
                  詳細
                <% end %>
              </td>

              <!-- 削除ボタン -->
              <td class="align-middle">
                <%= button_to admin_article_path(article), method: :delete, data: { turbo_confirm: "この記事を削除してもよろしいですか？" }, class: "btn btn-outline-danger py-1 rounded-pill shadow-sm text-danger delete-btn" do %>
                  削除
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
