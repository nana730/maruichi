<div class="mb-6 text-center">
  <h4 class="display-6 text-brown-700 fw-bold"><%= @article.title %></h4>
</div>

<div class="d-flex flex-wrap justify-content-center">
  <div class="col-12 col-md-10 col-lg-8 bg-light-brown p-4 rounded-2 shadow-lg">
    <!-- 画像 -->
    <% if @article.image.attached? %>
      <div class="mb-4 text-center">
        <%= image_tag @article.image, class: "img-fluid rounded shadow-sm", size: "300x300", alt: @article.title %>
      </div>
    <% end %>

    <!-- 記事内容 -->
    <div class="mb-4">
      <h5 class="text-muted">内容</h5>
      <p class="text-slate-700"><%= @article.description %></p>
    </div>

    <!-- 作成日と更新日 -->
    <div class="mb-4">
      <h6 class="text-muted">作成日: <span class="text-slate-700"><%= l @article.created_at, format: :long %></span></h6>
      <h6 class="text-muted">更新日: <span class="text-slate-700"><%= l @article.updated_at, format: :long %></span></h6>
    </div>

    <!-- ボタン -->
    <div class="d-flex justify-content-center mt-4">
      <!-- 編集ボタン -->
      <%= link_to edit_admin_article_path(@article), class: "btn btn-outline-success w-45 py-2 rounded-pill shadow-lg mx-2" do %>
        <i class="bi bi-pencil"></i> 編集する
      <% end %>

      <!-- 削除ボタン -->
      <%= button_to admin_article_path(@article), method: :delete, data: { turbo_confirm: "この記事を削除してもよろしいですか？" }, class: "btn btn-outline-danger w-45 py-2 rounded-pill shadow-lg mx-2" do %>
        <i class="bi bi-trash"></i> 削除する
      <% end %>
    </div>
  </div>
</div>

<!-- 戻るリンク -->
<div class="d-flex justify-content-center mt-4">
  <%= link_to admin_articles_path, class: "btn btn-outline-secondary w-25 py-2 rounded-pill shadow-lg" do %>
    <i class="bi bi-arrow-left"></i> 一覧に戻る
  <% end %>
</div>
