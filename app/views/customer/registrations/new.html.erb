<div class="mb-4 text-center">
  <h2 class="display-5 fw-bold">アカウント登録</h2>
</div>

<div class="d-flex justify-content-center mb-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col-12 col-md-8 col-lg-6" }) do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>
    
    <!-- Name Field -->
    <div class="mb-3">
      <%= f.label :name, "名前", class: "form-label text-muted" %>
      <%= f.text_field :name, class: "form-control border border-secondary rounded-2 shadow-sm", placeholder: "フルネームを入力" %>
    </div>

    <!-- Email Field -->
    <div class="mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label text-muted" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control border border-secondary rounded-2 shadow-sm", placeholder: "例: user@example.com" %>
    </div>

    <!-- Password Field -->
    <div class="mb-3">
      <%= f.label :password, "パスワード", class: "form-label text-muted" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control border border-secondary rounded-2 shadow-sm", placeholder: "パスワードを入力" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="mb-4">
      <%= f.label :password_confirmation, "パスワード確認", class: "form-label text-muted" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border border-secondary rounded-2 shadow-sm", placeholder: "パスワードを再入力" %>
    </div>

    <!-- Submit Button -->
    <%= f.submit 'サインアップ', class: "btn btn-coffee w-100 text-white py-2 rounded-pill shadow" %>
  <% end %>
</div>

<!-- 戻るボタン -->
<div class="d-flex justify-content-center mb-5">
  <%= link_to '戻る', root_path, class: "btn btn-outline-secondary btn-back" %>
</div>
